	<select id="CSPCIS402EMainSelect" parameterClass="paramMap" resultMap="CSPCIS402EMainSelect">
		<![CDATA[
			SELECT	T1.STTM_DVSN_CD
					,T1.ACP_YR
					,T1.STTM_ACP_NO
					,T1.ACP_YR||'-'||'-감찰-'||T1.STTM_ACP_NO AS ACP_NO	
					,T1.HMP_APL_NO
					,T1.STTM_KND_CD
					,T1.STTM_KND_DTL_CD
					,F_CODE_NM('1000759',T1.STTM_KND_DTL_CD) AS STTM_KND_DTL_NM
					,T1.NAM
					,DGUARD.DECRYPT('TB_ENC','EIN',T1.EIN) AS EIN
					,T1.JB_NM
					,T1.AD
					,T1.TNB
					,T1.EML_AD
					,T1.TIT_NM
					,T1.DOC_ID
					,T1.STTM_EXCU_TXT
					,T1.STTM_TXT_DH
					,T1.STTM_PLC_NM
					,T1.STTM_TXT
					,T1.RTRN_WAY_TXT
					,T1.RMK_TXT
					,T1.OTR_ORG_NM
					,T1.INSPC_AGR_YN
					,T1.OTR_INSPC_AGR_YN
					,T1.ACP_DH
					,T1.ACP_RUT_CD
					,T1.HNDL_STA_CD
					,F_CODE_NM('1000760',T1.HNDL_STA_CD) AS HNDL_STA_NM
					,T1.HNDL_DH
					,T1.ANS_TXT
					,T1.FRT_REGI_DH
					,T2.RES_NAM
					,T2.RES_TNB
					,T2.RES_JB_NM
					,T2.RES_AD
					,T2.CRP_NM
					,T1.FRT_USR_ID
			FROM	TBCSPDCP811M T1
					,TBCSPDCP812M T2
			WHERE	T1.STTM_DVSN_CD = T2.STTM_DVSN_CD(+)
			AND		T1.ACP_YR = T2.ACP_YR(+)
			AND		T1.STTM_ACP_NO = T2.STTM_ACP_NO(+)
			AND		T1.STTM_DVSN_CD = '2'
		]]>
		<dynamic>
			<isNotEmpty property="strNAM">
				AND T1.NAM LIKE '%'||#strNAM#||'%'
			</isNotEmpty>
		</dynamic>
		ORDER BY T1.ACP_YR DESC, TO_NUMBER(T1.STTM_ACP_NO) DESC
	</select>
	
	
	<!-- 진행상태 체크 -->
	<select id="CSPCIS402MHndlCdCheck" parameterClass="paramMap" resultClass="Integer">
		<![CDATA[
			SELECT	/*CSPCIS402MHndlCdCheck*/
					COUNT(*)
			FROM	TBCSPDCP811M T1
			WHERE	T1.STTM_DVSN_CD = #STTM_DVSN_CD#
			AND		T1.ACP_YR = #ACP_YR#
			AND		T1.STTM_ACP_NO = #STTM_ACP_NO#
			AND		T1.HNDL_STA_CD = '1'	/*신청인 자료는 진행상태가 10이다.*/
		]]>
	</select>
	
	<!-- 접수처리한다. -->
	<update id="CSPCIS402MAcceptSave" parameterClass="paramMap">
		<![CDATA[
			UPDATE	/*CSPCIS402MAcceptSave*/
					TBCSPDCP811M T1
			SET		T1.HNDL_STA_CD = '2'	/*상태 값이 20인자료가 접수 이다.*/
					,T1.ANS_PEN_CNB = #S_CNB#
					,T1.FNL_USR_ID = #FNL_USR_ID#
					,T1.FNL_DEAL_DPT_CD = #FNL_DEAL_DPT_CD#
					,T1.FNL_MNU_ID = #FNL_MNU_ID#
					,T1.FNL_MDF_DH = SYSDATE
			WHERE	T1.STTM_DVSN_CD = #STTM_DVSN_CD#
			AND		T1.ACP_YR = #ACP_YR#
			AND		T1.STTM_ACP_NO = #STTM_ACP_NO#
		]]>
	</update>
	
