<?xml version="1.0" encoding="utf-8" standalone="no"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="common/cmnEncryption">

	<select id="selectEncryptionRegist" parameterClass="paramMap"
		resultClass="resultMap">
        <![CDATA[
            SELECT EIN 
            FROM UBCREOWN.VBDCM001 
            WHERE EIN= crypt.Encrypt(#tb#, #cl#, #data#); 
		]]>

	</select>
	
	<select id="selectEncryptionAccount" parameterClass="paramMap"
		resultClass="resultMap">
        <![CDATA[
            SELECT EIN 
            FROM UBCREOWN.VBDCM002 
            WHERE EIN= crypt.Encrypt(#tb#, #cl#, #data#); 
		]]>
	</select>
	
	
	<insert id="insertEncryptionRegist" parameterClass="paramMap">
		INSERT INTO TBDCMACM024L(EIN, RRN) VALUES(#encryptVal#, #val#)
	</insert>
	
	<insert id="insertEncryptionAccount" parameterClass="paramMap">
		INSERT INTO TBDCMACM025L(EAN, ACNB) VALUES(#encryptVal#, #val#)
	</insert>
   
</sqlMap> 
